<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        >
    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_soft_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机空间分配情况"
            android:textSize="16dp"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_soft_bulu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@color/bulu"
            />
        <TextView
            android:id="@+id/tv_soft_intmem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="外置空间"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_soft_outsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textColor="@color/bulu"
            android:text="0 B"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_soft_blank"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_soft_outmem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="内置空间"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_soft_insize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 B"
            android:textSize="16dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_margin="2dp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>



    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:weightSum="1"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_phone_quick_phonesname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="三星"
            android:layout_margin="1dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_phone_quick_phonestyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_gravity="center_horizontal"
            android:text="xxxx"
            android:textSize="18dp"
            />
        <com.androidy.azsecuer.activity.progressBarMove.ProgressbarMove
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="5"
            android:layout_margin="5dp"
            android:progressDrawable="@drawable/phone_quick_progressbar"
            android:id="@+id/progressBar_phone_quick"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_phone_quick_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111GB"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            />
        <Button
            android:id="@+id/bt_phone_quick_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/includ_phone_quick_button"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="显示系统进程"
            />
</LinearLayout>